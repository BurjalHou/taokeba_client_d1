<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView 
        android:id="@+id/section_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_margin="@dimen/card_text_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray"/>
    
    <TextView 
        android:id="@+id/section_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/section_comment_text"
        android:layout_margin="@dimen/card_text_horizontal_margin"/>
    
    <TextView 
        android:id="@+id/section_comment_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/section_comment_date"
        android:layout_below="@id/section_comment_text"
        android:layout_margin="@dimen/card_text_horizontal_margin"/>
    
    <TextView 
        android:id="@+id/vLine"
        android:layout_below="@id/section_comment_user"
        android:layout_marginTop="@dimen/card_text_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>
    

</RelativeLayout>
