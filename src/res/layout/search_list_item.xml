<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_text_horizontal_margin"
        android:background="@drawable/card_background"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/card_text_vertical_margin">
            
            <TextView 
                android:id="@+id/search_course_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>
            
            <TextView 
	            android:id="@+id/search_course_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/card_text_horizontal_margin"
		        android:textSize="@dimen/card_text_title_size"
		        android:textColor="@android:color/black"/>
            
            <TextView 
                android:id="@+id/search_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_text_horizontal_margin"
		        android:textSize="@dimen/card_text_title_size"
		        android:textColor="@android:color/black"/>
            
        </LinearLayout>
        
       	<LinearLayout 
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"
       	    android:orientation="vertical"
       	    android:layout_marginLeft="@dimen/card_text_horizontal_margin"
	   	    android:layout_marginBottom="@dimen/card_text_vertical_margin">
       	    
       	    <TextView
	            android:id="@+id/search_course_type"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/darker_gray" />
			
       	    <LinearLayout 
       	        android:layout_width="match_parent"
       	        android:layout_height="wrap_content"
       	        android:orientation="horizontal">
       	        
       	        <TextView 
       	            android:layout_width="wrap_content"
       	            android:layout_height="wrap_content" 
       	            android:textColor="@android:color/darker_gray"
       	            android:text="学分"/>      	        
       	        
       	        <TextView 
	       	        android:id="@+id/search_course_units"
	       	        android:layout_width="wrap_content"
	       	        android:layout_height="wrap_content"
	       	        android:textColor="@android:color/darker_gray"/>
       	        
       	        
       	    </LinearLayout>
       	    
       	   
       	    	    
       	</LinearLayout> 
        
        
    </LinearLayout>
    
</FrameLayout>
