<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WizardPageContainer">

    <TextView style="@style/WizardPageTitle" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView style="@style/WizardFormLabel"
                android:text="@string/regist_student_type" />

            <Spinner
                android:id="@+id/regist_student_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView style="@style/WizardFormLabel"
                android:text="@string/regist_school"/>

            <Spinner
                android:id="@+id/regist_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView style="@style/WizardFormLabel"
                android:text="@string/regist_major"/>

            <EditText
                android:id="@+id/regist_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView style="@style/WizardFormLabel"
                android:text="@string/regist_class"/>

            <EditText
                android:id="@+id/regist_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:inputType="number"/>

            <TextView style="@style/WizardFormLabel"
                android:text="@string/regist_start_date"/>

            <EditText
                android:id="@+id/regist_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_calender"
                android:focusableInTouchMode="false"
                android:editable="false"/>

            <TextView style="@style/WizardFormLabel"
                android:text="@string/regist_end_date"/>

            <EditText
                android:id="@+id/regist_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:drawableRight="@drawable/ic_calender"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
