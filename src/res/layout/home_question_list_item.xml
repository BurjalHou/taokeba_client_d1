<?xml version="1.0" encoding="utf-8"?>
    
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:layout_margin="@dimen/card_text_vertical_margin">
        
        <TextView 
	        android:id="@+id/home_question_course_id"
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:visibility="invisible"/>
        
        <TextView 
	        android:id="@+id/home_question_item_id"
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:visibility="invisible"/>
        
        <TextView 
	        android:id="@+id/home_question_course_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/card_text_title_size"
	        android:layout_marginLeft="@dimen/card_text_horizontal_margin"
            android:layout_marginTop="@dimen/card_text_vertical_margin"/>
	    
	    <TextView 
	        android:id="@+id/home_question_course_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/card_text_title_size"
	        android:layout_toRightOf="@id/home_question_course_num"
            android:layout_marginTop="@dimen/card_text_vertical_margin"
            android:layout_marginLeft="@dimen/card_text_horizontal_margin"/>
	    
	    <TextView 
		    android:id="@+id/home_question_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:layout_below="@id/home_question_course_name"
		    android:layout_marginLeft="@dimen/card_text_horizontal_margin"
		    android:textColor="@android:color/darker_gray" />
		
		<TextView 
		    android:id="@+id/home_question_date"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/home_question_text"
		    android:layout_marginLeft="@dimen/card_text_vertical_margin"
		    android:paddingBottom="@dimen/card_text_vertical_margin" />
		
    </RelativeLayout>
     
</FrameLayout>
    
