<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_text_horizontal_margin"
        android:background="@drawable/card_background"
        android:orientation="vertical">
        
        <TextView 
	        android:id="@+id/rank_comment_section_id"
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:visibility="invisible"/>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="@dimen/card_text_vertical_margin">
	        
	         <TextView 
		        android:id="@+id/rank_comment_course_num"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/card_text_horizontal_margin"
		        android:textSize="@dimen/card_text_title_size"/>
	    
		    <TextView 
		        android:id="@+id/rank_comment_course_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/card_text_horizontal_margin"
		        android:textSize="@dimen/card_text_title_size"/>
		        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginLeft="@dimen/card_text_horizontal_margin">
	        
	        <TextView 
	            android:id="@+id/rank_comment_term"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/darker_gray"/>
	        
	        <TextView 
	            android:id="@+id/rank_comment_department"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/card_text_horizontal_margin"
	            android:textColor="@android:color/darker_gray"/>
	        
	        <TextView 
	            android:id="@+id/rank_comment_instructor"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:layout_marginLeft="@dimen/card_text_horizontal_margin"
	            android:textColor="@android:color/darker_gray"/>
	        
	    </LinearLayout>
	    
	   	<LinearLayout 
	   	    android:layout_height="wrap_content"
	   	    android:layout_width="wrap_content"
	   	    android:orientation="horizontal"
	   	    android:layout_marginLeft="@dimen/card_text_horizontal_margin"
	   	    android:layout_marginBottom="@dimen/card_text_vertical_margin">
	   	    
	   	    <TextView 
	   	        android:id="@+id/rank_comment_exempt"
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:textColor="@android:color/darker_gray"/>
	   	    
	   	    <TextView 
	   	        android:id="@+id/rank_comment_text"
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:text="评论数"/>
	   	    
	   	    <TextView 
	   	        android:id="@+id/rank_comment"
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:textColor="@android:color/holo_blue_light"/>
	   	    
	   	</LinearLayout>
        
    </LinearLayout>
    
</FrameLayout>
