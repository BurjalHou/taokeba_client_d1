<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_text_vertical_margin"
        android:background="@drawable/card_background">

        <TextView
            android:id="@+id/message_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_text_horizontal_margin"
            android:layout_marginTop="@dimen/card_text_vertical_margin"/>

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_text_horizontal_margin"/>

        <TextView
            android:id="@+id/message_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_text_horizontal_margin"
            android:layout_marginBottom="@dimen/card_text_vertical_margin"/>
    </LinearLayout>

</FrameLayout>